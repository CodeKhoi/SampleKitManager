<div id='loginCard' class="card">
	<div class="card-content">
	<h4>LOGIN</h4>
		<form method="post" action="/users/login">
			<div class="row">
				<div class="input-field col s12 m6">
					<i class="material-icons prefix">account_circle</i>
					<input id="usernameLogin" type="text" class="validate" name='username'>
				  	<label class="active" for="username">Username</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12 m6">
					<i class="material-icons prefix ">lock</i>
					<input id="password" type="text" class="validate" name='password'>
				  	<label class="active" for="password">Password</label>
				</div>
			</div>
			<div class="card-action">
				<button id='loginBtn' type="submit" class="btn waves-effect waves-light black">Submit</button>
			</div>
		</form>
	</div>
</div> 